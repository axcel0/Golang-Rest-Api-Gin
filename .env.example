# ===========================================
# Application Configuration (Environment Variables)
# Copy to .env and customize
# ===========================================

# Server Configuration
SERVER_PORT=8080
SERVER_MODE=release  # debug or release
SERVER_READTIMEOUT=10s
SERVER_WRITETIMEOUT=10s
SERVER_IDLETIMEOUT=60s

# Database Configuration
DATABASE_DRIVER=sqlite  # sqlite or postgres
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=your_password_here
DATABASE_DBNAME=goproject.db
DATABASE_SSLMODE=disable
DATABASE_MAXIDLECONNS=10
DATABASE_MAXOPENCONNS=100
DATABASE_CONNMAXLIFETIME=1h

# Logger Configuration
LOGGER_LEVEL=info       # debug, info, warn, error
LOGGER_FORMAT=json      # json or console
LOGGER_OUTPUTPATH=stdout

# Application Configuration
APP_NAME=Golang-Rest-Api-Gin
APP_VERSION=1.0.0
APP_ENVIRONMENT=production  # development, staging, production
APP_RATELIMITPERMINUTE=100  # Requests per minute per IP
APP_RATELIMITBURST=10       # Allow burst of requests

# JWT Authentication
JWT_SECRETKEY=your-super-secret-jwt-key-change-this-in-production
JWT_ACCESSTOKENDURATION=24h     # Access token expiration
JWT_REFRESHTOKENDURATION=168h   # Refresh token expiration (7 days)
